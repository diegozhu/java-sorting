package com.toozhao.sort;

public class InsertionSort {
	
	public static void main(String args[]){
		
		int [] array = {1,20,6,3,19,7,14,12,10};
		
		for(int outer=1;i<array.length;i++){
			int temp = array[i];
			for(int j=i-1;j>=0 && temp < array[j];j--){
				
				/**
				 * 将最大的赋值给目前比较的数组尾部
				 * 由于这里的数组下标需要跟随循环而变化，所以只能使用 j来表示
				 */
				array[j+1] = array[j];  
				array[j] = temp;
				temp = array[j];
				
			}
			
			/*//----------
			for(int flag: array){
				System.out.println(flag);
			}
			System.out.println("========================");*/
		}
		
		for(int flag: array){
			System.out.println(flag);
		}
	}
}
